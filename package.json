{
  "name": "@opkod-france/strapi-provider-email-brevo",
  "version": "4.0.0",
  "description": "Brevo (Sendinblue) email plugin for Strapi v5 with admin panel configuration",
  "license": "MIT",
  "author": {
    "name": "Ayoub Hidri",
    "email": "ayoub.hidri@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/opkod-france/strapi-provider-email-brevo.git"
  },
  "bugs": {
    "url": "https://github.com/opkod-france/strapi-provider-email-brevo/issues"
  },
  "homepage": "https://github.com/opkod-france/strapi-provider-email-brevo#readme",
  "keywords": [
    "strapi",
    "strapi-plugin",
    "email",
    "brevo",
    "sendinblue",
    "transactional-email",
    "strapi-v5",
    "strapi-email"
  ],
  "type": "commonjs",
  "exports": {
    "./strapi-admin": {
      "source": "./admin/src/index.ts",
      "import": "./dist/admin/index.mjs",
      "require": "./dist/admin/index.js",
      "default": "./dist/admin/index.js"
    },
    "./strapi-server": {
      "source": "./server/src/index.ts",
      "import": "./dist/server/index.mjs",
      "require": "./dist/server/index.js",
      "default": "./dist/server/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "strapi-admin.js",
    "strapi-server.js"
  ],
  "scripts": {
    "build": "strapi-plugin build",
    "clean": "rm -rf dist",
    "develop": "strapi-plugin watch",
    "verify": "strapi-plugin verify",
    "prepublishOnly": "npm run build"
  },
  "strapi": {
    "name": "email-brevo",
    "displayName": "Brevo Email",
    "description": "Send transactional emails via Brevo API with admin panel configuration",
    "kind": "plugin"
  },
  "dependencies": {
    "@getbrevo/brevo": "^3.0.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@strapi/design-system": "^2.0.0",
    "@strapi/icons": "^2.0.0",
    "@strapi/sdk-plugin": "^5.0.0",
    "@strapi/strapi": "^5.0.0",
    "@tanstack/react-query": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "semantic-release": "^25.0.0",
    "styled-components": "^6.1.19",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@strapi/strapi": "^5.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
